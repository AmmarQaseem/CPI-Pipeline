set -ex
for corpus in ${CORPORA}
do
  f=${origDir}/${corpus}.xml
  test -f "$f" || ( echo "Corpus file '$f' does not exist."  >> /dev/stderr ; exit 1 )
  mkdir -p CV/corpus/${corpus}
  java -Xmx4g -cp "${CLASSPATH}" org.learningformat.transform.AllGraphTransformer -f "$f" -s "${APGsplit}" -o "CV/corpus/"
  find CV/corpus/${corpus} -name "*.txt" -exec rm -rf '{}.gz' \; -exec gzip '{}' \;
done


