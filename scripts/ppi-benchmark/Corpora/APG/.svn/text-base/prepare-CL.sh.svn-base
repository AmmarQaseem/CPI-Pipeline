rm -rf CL
mkdir CL
set -ex
for corpus in ${CORPORA}
do
	mkdir CL/${corpus}
	zcat CC/${corpus}/corpus.xml.gz >    CL/${corpus}/test.xml
done

for corpus in ${CORPORA}
do
	rm -rf ensemble.txt
	testcorpus=${CORPORA/$corpus/}
	for test in ${testcorpus}
	do
		cat CL/${test}/test.xml >> ensemble.txt
	done
       cat ensemble.txt | sed -re 's#</corpus><corpus source="[a-zA-Z0-9]+">##g' > CL/${corpus}/train.xml
done
rm -rf ensemble.txt

